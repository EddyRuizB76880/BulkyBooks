@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <!--Icon from bootstrap icons-->
                <i class="bi bi-plus-circle"></i>&nbsp Create category
            </a>
        </div>
    </div>
    <br /> <br/>
<table class="table table-borderd table-striped" style="width=100%">
    <thead>
        <tr>
            <th>Category name</th>
            <th>Display order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!--With data received from HomeController, fill table rows with each category-->
        @foreach(var category in Model){
            <tr>
                <td width="50%"> @category.name </td>
                <td width="30%"> @category.DisplayOrder</td>
                <!--Pass id back to method in controller using the asp-route-PARAMETER_NAME tag helper. Last part must match the parameter's name defined in action-->
                <td class="w-75 btn-group"><a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id=@category.Id
                ><i class="bi bi-pencil-square"></i>
                    Edit</a>
                </td>

                    <td class="w-75 btn-group">
                        <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id=@category.Id>
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                    </td>
            </tr>            
        }
    </tbody>

</table>

</div>